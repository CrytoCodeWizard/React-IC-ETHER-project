{
  "name": "@dfinity/ic-eth-starter",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "setup": "npm ci && dfx canister create --all && dfx generate backend && dfx deploy",
    "start": "run-p frontend backend",
    "frontend": "vite --port 3000",
    "backend": "run-p backend:mo backend:rs",
    "backend:mo": "mo-dev --generate --deploy -y",
    "backend:rs": "nodemon -q -w canisters/ic_eth -x 'dfx generate -qq 2> /dev/null && dfx deploy ic_eth -qq -y 1> /dev/null'",
    "build": "vite build",
    "preview": "vite preview",
    "test": "run-s test:rust test:ts",
    "test:rust": "cargo test",
    "test:ts": "vitest run",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\" \"canisters/backend/**/*.mo\"",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@dfinity/agent": "^0.18.1",
    "@dfinity/auth-client": "^0.18.1",
    "@dfinity/candid": "^0.18.1",
    "@dfinity/principal": "^0.18.1",
    "@emotion/styled": "^11.11.0",
    "@tippyjs/react": "^4.2.6",
    "highlight.js": "^11.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.14.2",
    "react-toastify": "^9.1.3",
    "styled-components": "^6.0.4",
    "twin.macro": "^3.3.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/styled-components": "^5.1.26",
    "@types/turndown": "^5.0.1",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "babel-plugin-twin": "^1.1.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.13",
    "eslint": "^8.45.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prettier-plugin-motoko": "^0.7.0",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.4",
    "vite-imagetools": "^4.0.19",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^0.33.0",
    "web-vitals": "^3.4.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ]
  }
}
